<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/js/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>GiftBucket - Give Progress</title>
  </head>

  <body>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/mdb.min.css">
    <link rel="stylesheet" href="/css/styles.css">

    <div class = "container-fluid">

      <div class = "row dropdown" id="navbar">
        <div class = "col-xs-2">
          <span id="navbar-header"><a href="/" style="color: #333">GiftBucket</a><span>
        </div>
        <div class = "col-xs-4 dropdown">
          <a id="communities-button" class="btn btn-default waves-effect dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Communities <i class="fa fa-arrow-down right"></i></a>
          <div class="dropdown-menu extended-menu" aria-labelledby="dropdownMenuButton">
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/arts"> <i class="fa fa-paint-brush fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Arts, Culture, Humanities</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/community"> <i class="fa fa-male fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Community Development</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/education"> <i class="fa fa-graduation-cap fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Education</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/environment"> <i class="fa fa-tree fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Environment</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/health"> <i class="fa fa-heart fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Health</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/rights"> <i class="fa fa-child fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Human and Civil Rights</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/humans"> <i class="fa fa-users fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Human Services</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/international"> <i class="fa fa-plane fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>International</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/research"> <i class="fa fa-book fa-4x fa-fw" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Research and Public Policy</span></a>
            <a class="com-panel btn btn-outline-secondary waves-effect" href="/communities/religion"> <i class="glyphicon glyphicon-star" style="font-size: 30px; vertical-align: middle; position: relative; top: 10px"></i> <br><span>Religion</span></a>
          </div>
        </div>
        <div class = "col-xs-6">
          <% if user_signed_in? %>
          <div class = "dropdown user-menu">
            <button id="user-button" class="btn btn-primary btn-round waves-effect dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My Account</button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item text-center" href="/profiles"><br>My Profile<br></a><br>
              <a class="dropdown-item text-center" href="/banking"><br>Billing<br></a><br>
              <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="delete"><br>Sign Out<br></a><br>
            </div>
          </div>
          <% else %>
          <div class = "dropdown user-menu">
            <button id="user-button" class="btn btn-primary btn-round waves-effect dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sign up / Log in</button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item text-center" href="/users/sign_up"><br>Sign Up<br></a><br>
              <a class="dropdown-item" href="/users/sign_in"><br>Sign In<br></a><br>
            </div>
          </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div id="content" class="container-fluid">
          <br>
          <% if notice %>
          <p class="alert alert-info"><%= notice %></p>
          <% elsif alert %>
          <p class="alert alert-danger"><%= alert %></p>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
    <script src="/js/tether.min.js"></script>
    <script src="/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/js/mdb.min.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js" crossorigin="anonymous"></script>

  </body>
</html>
